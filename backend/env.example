# Database
DATABASE_URL="postgresql://username:password@localhost:5432/adult_content_platform"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"

# Email (for verification)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Cloudflare R2 (for video/image storage)
R2_ACCOUNT_ID="your-r2-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET_NAME="adult-content-platform"
R2_PUBLIC_URL="https://your-bucket.r2.cloudflarestorage.com"

# CCBill (for payments)
CCBILL_CLIENT_ACCOUNT_NUMBER="your-ccbill-account"
CCBILL_CLIENT_SUB_ACCOUNT_NUMBER="your-ccbill-sub-account"
CCBILL_CLIENT_DATALINK_USERNAME="your-ccbill-username"
CCBILL_CLIENT_DATALINK_PASSWORD="your-ccbill-password"
CCBILL_SANDBOX=true

# Age Verification
YOTI_APPLICATION_ID="your-yoti-app-id"
YOTI_PRIVATE_KEY="your-yoti-private-key"

# Analytics
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

